{
  "name": "puppeteer_ts",
  "version": "1.0.0",
  "description": "Quick demo using Puppeteer with TypeScript for browser testing",
  "source": "javascriptVersions/main.js",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc src/main.ts && node javascriptVersions/main.js",
    "startMinimized": "tsc src/main.ts && parcel build && node dist/main.js",
    "watch": "tsc src/main.ts && parcel watch",
    "build": "tsc src/main.ts && parcel build"
  },
  "targets": {
    "main": {
      "context": "node",
      "optimize": true,
      "includeNodeModules": true
    }
  },
  "author": "ChillyPepper (https://github.com/chillypepper/puppeteer-typescript-template)",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/chillypepper/puppeteer-typescript-template.git"
  },
  "devDependencies": {
    "@types/node": "10.12.18",
    "@types/puppeteer": "1.11.1",
    "typescript": "3.2.4",
    "prettier": "^2.8.8",
    "parcel": "latest"
  },
  "dependencies": {
    "@types/prompt-sync": "^4.2.0",
    "prompt-sync": "^4.2.0",
    "puppeteer": "1.11.0",
    "puppeteer-cluster": "^0.23.0"
  }
}
